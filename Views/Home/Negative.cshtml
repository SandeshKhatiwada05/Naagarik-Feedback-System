@model IEnumerable<NaagarikFeedbackEF.Models.Feedback>

@{
    ViewData["Title"] = "Negative Feedback";
}

<div class="wrapper">
    <!-- Flag positioned at the top center of the page -->
    <div class="flag">
        <img src="~/Animated-Flag-Nepal.gif" alt="Nepal Flag" />
    </div>

    <!-- Main container for the content -->
    <div class="main-container">
        <div class="content-container">
            <h1>Negative Feedback</h1>
            <p>Here are the negative feedback entries received from users.</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Feedback Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.FeedbackDescription</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Buttons section -->
            <div class="button-container">
                <a href="@Url.Action("Index", "Feedbacks")" class="list-button">Back to All Feedback</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* General reset */
    body, h1, p {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
    }

    body {
        background-color: #f4f7fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
    }

    /* Wrapper to hold both flag and content */
    .wrapper {
        text-align: center;
    }

    /* Flag styling */
    .flag img {
        width: 120px;
        height: auto;
        margin-bottom: 20px;
        display: inline-block;
    }

    /* Main container styling */
    .main-container {
        background: linear-gradient(to bottom, #f8d7da, #f5c6cb);
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 80%;
        max-width: 900px;
        margin-top: 20px;
    }

    .content-container {
        padding: 20px;
    }

    h1 {
        font-size: 3rem;
        color: #721c24;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    /* Table styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #dc3545;
            color: white;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    /* Button container */
    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    /* Cool button styles */
    .list-button {
        display: inline-block;
        padding: 12px 30px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1.2rem;
        font-weight: bold;
        background-color: #dc3545;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .list-button:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

        .list-button:active {
            background-color: #a71d2a;
            transform: scale(0.98);
        }
</style>
