@model NaagarikFeedbackEF.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
}

<div class="container">
    <!-- Logo Section -->
    <div class="logo-container">
        <img src="~/Animated-Flag-Nepal.gif" alt="Nepal Flag" class="logo">
    </div>

    <div class="main-container">
        <h1>Create Feedback</h1>
        <p>We appreciate your valuable feedback!</p>
        <hr />

        <div class="form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name"
                           pattern="^[A-Za-z\s]+$" title="Name should only contain letters and spaces" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="FeedbackType" class="control-label"></label>
                    <select asp-for="FeedbackType" class="form-control">
                        <option value="Positive">Positive</option>
                        <option value="Negative">Negative</option>
                    </select>
                    <span asp-validation-for="FeedbackType" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="FeedbackDescription" class="control-label"></label>
                    <textarea asp-for="FeedbackDescription" class="form-control" placeholder="Describe your feedback" rows="4"></textarea>
                    <span asp-validation-for="FeedbackDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="cta-button">Submit Feedback</button>
                </div>
            </form>
        </div>

        <div class="back-link">
            <a asp-action="Index" class="back-button">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

