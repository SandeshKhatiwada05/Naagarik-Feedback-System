            text-align: left;
        }

        .styled-table th {
            background-color: #334e68;
            color: white;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .styled-table tr:hover {
            background-color: #f1f1f1;
        }

    .edit-link, .details-link, .delete-link {
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .edit-link {
        color: #2196F3;
    }

        .edit-link:hover {
            color: #0b7dda;
            transform: scale(1.05);
        }

    .details-link {
        color: #fbc02d;
    }

        .details-link:hover {
            color: #f9a825;
            transform: scale(1.05);
        }

    .delete-link {
        color: #d9534f;
    }

        .delete-link:hover {
            color: #c9302c;
            transform: scale(1.05);
        }

    .button-container {
        margin-top: 20px;
    }

    .cta-button {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    /* Positive Feedback Button - Blue */
    .cta-button {
        background-color: #007BFF; /* Blue */
        color: white;
    }

        .cta-button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    /* Negative Feedback Button - Red */
    .list-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #DC3545; /* Red */
        color: white;
