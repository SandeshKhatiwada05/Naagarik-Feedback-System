        height: 100vh;
    }

    .container {
        text-align: center;
        width: 100%;
    }

    .logo-container {
        margin-bottom: 20px;
    }

    .logo {
        width: 80px;
        height: auto;
    }

    .main-container {
        background: linear-gradient(to bottom, #e3e8ef, #b9d3ee);
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 80%;
        max-width: 900px;
        text-align: center;
    }

    h1 {
        font-size: 2rem;
        color: #334e68;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 20px;
    }

    .action-buttons {
        text-align: right;
        margin-bottom: 15px;
    }

    .cta-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .cta-button:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
