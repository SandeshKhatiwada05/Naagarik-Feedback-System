@model IEnumerable<NaagarikFeedbackEF.Models.Feedback>

@{
    ViewData["Title"] = "Feedback List";
}

<div class="container">
    <!-- Logo Section -->
    <div class="logo-container">
        <img src="~/Animated-Flag-Nepal.gif" alt="Nepal Flag" class="logo">
    </div>

    <div class="main-container">
        <h1>Feedback List</h1>
        <p>View and manage all feedback entries below.</p>
        <hr />

        <div class="action-buttons">
            <a asp-action="Create" class="cta-button">+ Add Feedback</a>
        </div>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.FeedbackType)</th>
                    <th>@Html.DisplayNameFor(model => model.FeedbackDescription)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.FeedbackType)</td>
                        <td>@Html.DisplayFor(modelItem => item.FeedbackDescription)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="edit-link">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="details-link">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="delete-link">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- New buttons for Positive and Negative feedback -->
    <div class="button-container">
        <a href="@Url.Action("Positive", "Feedbacks")" class="cta-button">Positive Feedback</a>
        <a href="@Url.Action("Negative", "Feedbacks")" class="list-button">Negative Feedback</a>
    </div>
</div>

<style>
    /* General Styling */
    body {
        background-color: #f4f7fa;
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
